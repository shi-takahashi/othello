<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- ヘッダー -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="#FFFFFF"
            android:elevation="4dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="戻る"
                android:textSize="14sp"
                style="@style/Widget.Material3.Button.TextButton"
                android:textColor="#666666"
                app:icon="@drawable/ic_arrow_back"
                app:iconTint="#666666" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="友達対戦"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:gravity="center" />

            <!-- スペーサー（戻るボタンと同じ幅） -->
            <View
                android:layout_width="72dp"
                android:layout_height="1dp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center_horizontal">

                <!-- ルーム作成セクション -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ルームを作成"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ルームを作成して友達を招待します"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="16dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCreateRoom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ルームを作成"
                            android:textSize="16sp"
                            app:cornerRadius="8dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- ルーム参加セクション -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ルームに参加"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ルームコードを入力して参加します"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="16dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusBottomEnd="8dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etRoomCode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="ルームコード"
                                android:inputType="textCapCharacters"
                                android:maxLength="6"
                                android:textSize="18sp"
                                android:letterSpacing="0.2" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnJoinRoom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="参加する"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            app:backgroundTint="#4CAF50"
                            app:cornerRadius="8dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 待機中表示 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardWaiting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#E3F2FD">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="相手を待っています..."
                            android:textSize="16sp"
                            android:textColor="#1976D2"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ルームコード"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/txtRoomCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="XXXXXX"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="#1976D2"
                            android:letterSpacing="0.3"
                            android:layout_marginBottom="16dp" />

                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCancelWaiting"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="キャンセル"
                            android:textSize="16sp"
                            style="@style/Widget.Material3.Button.TonalButton"
                            app:backgroundTint="#FFEBEE"
                            android:textColor="#D32F2F"
                            app:cornerRadius="8dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_background"
    android:fitsSystemWindows="true"
    tools:context=".SettingActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="72dp"
        android:clipToPadding="false"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="設定"
                android:textColor="@color/setting_text_primary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- コンピューター対戦セクション -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="コンピューター対戦"
                android:textColor="@color/setting_text_secondary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Level Card -->
            <com.google.android.material.card.MaterialCardView
                style="@style/SettingCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="コンピューターの強さ"
                        android:textColor="@color/setting_text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/levelToggleGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:checkedButton="@id/level1"
                        app:selectionRequired="true"
                        app:singleSelection="true">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/level1"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:text="弱い"
                            android:textColor="@color/setting_text_primary"
                            app:cornerRadius="8dp"
                            app:strokeColor="@color/setting_card_stroke" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/level2"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:text="普通"
                            android:textColor="@color/setting_text_primary"
                            app:cornerRadius="8dp"
                            app:strokeColor="@color/setting_card_stroke" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/level3"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:text="強い"
                            android:textColor="@color/setting_text_primary"
                            app:cornerRadius="8dp"
                            app:strokeColor="@color/setting_card_stroke" />

                    </com.google.android.material.button.MaterialButtonToggleGroup>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Turn Card -->
            <com.google.android.material.card.MaterialCardView
                style="@style/SettingCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="手番"
                        android:textColor="@color/setting_text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/tebanToggleGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:checkedButton="@id/black"
                        app:selectionRequired="true"
                        app:singleSelection="true">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/black"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:text="黒（先攻）"
                            android:textColor="@color/setting_text_primary"
                            app:cornerRadius="8dp"
                            app:strokeColor="@color/setting_card_stroke" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/white"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:text="白（後攻）"
                            android:textColor="@color/setting_text_primary"
                            app:cornerRadius="8dp"
                            app:strokeColor="@color/setting_card_stroke" />

                    </com.google.android.material.button.MaterialButtonToggleGroup>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Handicap Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/handicapCard"
                style="@style/SettingCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="ハンディキャップ"
                        android:textColor="@color/setting_text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="角を与える"
                        android:textColor="@color/setting_text_secondary"
                        android:textSize="12sp" />

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/handicapTargetToggleGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:checkedButton="@id/handicapNone"
                        app:selectionRequired="true"
                        app:singleSelection="true">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/handicapNone"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:text="なし"
                            android:textColor="@color/setting_text_primary"
                            app:cornerRadius="8dp"
                            app:strokeColor="@color/setting_card_stroke" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/handicapPlayer"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:text="自分"
                            android:textColor="@color/setting_text_primary"
                            app:cornerRadius="8dp"
                            app:strokeColor="@color/setting_card_stroke" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/handicapCpu"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:text="相手"
                            android:textColor="@color/setting_text_primary"
                            app:cornerRadius="8dp"
                            app:strokeColor="@color/setting_card_stroke" />

                    </com.google.android.material.button.MaterialButtonToggleGroup>

                    <LinearLayout
                        android:id="@+id/handicapCountContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="角の数"
                            android:textColor="@color/setting_text_secondary"
                            android:textSize="12sp" />

                        <com.google.android.material.button.MaterialButtonToggleGroup
                            android:id="@+id/handicapCountToggleGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:checkedButton="@id/handicapCount1"
                            app:selectionRequired="true"
                            app:singleSelection="true">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/handicapCount1"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="44dp"
                                android:layout_weight="1"
                                android:text="1"
                                android:textColor="@color/setting_text_primary"
                                app:cornerRadius="8dp"
                                app:strokeColor="@color/setting_card_stroke" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/handicapCount2"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="44dp"
                                android:layout_weight="1"
                                android:text="2"
                                android:textColor="@color/setting_text_primary"
                                app:cornerRadius="8dp"
                                app:strokeColor="@color/setting_card_stroke" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/handicapCount3"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="44dp"
                                android:layout_weight="1"
                                android:text="3"
                                android:textColor="@color/setting_text_primary"
                                app:cornerRadius="8dp"
                                app:strokeColor="@color/setting_card_stroke" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/handicapCount4"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="44dp"
                                android:layout_weight="1"
                                android:text="4"
                                android:textColor="@color/setting_text_primary"
                                app:cornerRadius="8dp"
                                app:strokeColor="@color/setting_card_stroke" />

                        </com.google.android.material.button.MaterialButtonToggleGroup>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="※ハンディキャップ使用時は成績に記録されません"
                        android:textColor="@color/setting_text_secondary"
                        android:textSize="11sp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Random Mode Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/randomModeCard"
                style="@style/SettingCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ランダムモード"
                            android:textColor="@color/setting_text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="ランダムな配置から開始"
                            android:textColor="@color/setting_text_secondary"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="※成績は通常モードとは別に記録されます"
                            android:textColor="@color/setting_text_secondary"
                            android:textSize="11sp" />

                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchRandomMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Undo Card -->
            <com.google.android.material.card.MaterialCardView
                style="@style/SettingCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="待った"
                            android:textColor="@color/setting_text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="待った機能を使う"
                            android:textColor="@color/setting_text_secondary"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchReturnable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Reset Card (コンピューター対戦の成績) -->
            <com.google.android.material.card.MaterialCardView
                style="@style/SettingCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="成績リセット"
                            android:textColor="@color/setting_danger"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="すべての成績を消去する"
                            android:textColor="@color/setting_text_secondary"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchReset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 全体設定セクション -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="全体設定"
                android:textColor="@color/setting_text_secondary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Show Last Move Card -->
            <com.google.android.material.card.MaterialCardView
                style="@style/SettingCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="直前の手を表示"
                            android:textColor="@color/setting_text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="最後に置いた場所をマーキング"
                            android:textColor="@color/setting_text_secondary"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchShowLastMove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Sound Card -->
            <com.google.android.material.card.MaterialCardView
                style="@style/SettingCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="効果音"
                            android:textColor="@color/setting_text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="石を置いた時に音を鳴らす"
                            android:textColor="@color/setting_text_secondary"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Settings Dialog Card -->
            <com.google.android.material.card.MaterialCardView
                style="@style/SettingCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="起動時に設定ダイアログを表示"
                            android:textColor="@color/setting_text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="タイトルで「はじめる」を押した時"
                            android:textColor="@color/setting_text_secondary"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchShowQuickSettings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Button Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/setting_surface"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:padding="12dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            style="@style/SettingSecondaryButton"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:text="キャンセル" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOk"
            style="@style/SettingPrimaryButton"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:text="決定" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

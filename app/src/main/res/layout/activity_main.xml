<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- ボタン行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_button_bar"
            android:orientation="horizontal"
            android:paddingHorizontal="6dp"
            android:paddingVertical="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStart"
                style="@style/MainButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:text="開始" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLevelChange"
                style="@style/MainButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:text="設定" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnInterrupt"
                style="@style/MainButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:text="中断" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEnd"
                style="@style/MainButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/end_button_name"
                tools:text="@string/end_button_name" />

        </LinearLayout>

        <!-- プレイヤー情報 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:gravity="center">

            <!-- 自分の情報 -->
            <LinearLayout
                android:id="@+id/layoutMyInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/bg_player_inactive">

                <TextView
                    android:id="@+id/txtMyColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="あなた (黒)"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/txtMyCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="vs"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#999999" />

                <TextView
                    android:id="@+id/txtModeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#888888"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- 相手（CPU）の情報 -->
            <LinearLayout
                android:id="@+id/layoutOpponentInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/bg_player_inactive">

                <TextView
                    android:id="@+id/txtOpponentColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CPU (白)"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/txtOpponentCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

            </LinearLayout>

        </LinearLayout>

        <!-- ターン表示 -->
        <TextView
            android:id="@+id/txtTurnStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="あなたのターンです"
            android:textSize="16sp"
            android:textColor="#1976D2"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingVertical="4dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <net.st_wet.OthelloView
                android:id="@+id/othelloView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                tools:ignore="MissingConstraints" />

            <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-4630894580841955/9956399071"></com.google.android.gms.ads.AdView>

        </RelativeLayout>

    </LinearLayout>

    <!-- ハンデ表示（盤面左下） -->
    <TextView
        android:id="@+id/txtHandicap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="80dp"
        android:textSize="14sp"
        android:textColor="#666666"
        android:visibility="gone" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBack"
        style="@style/MainButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:paddingHorizontal="16dp"
        android:text="待った" />

</FrameLayout>
